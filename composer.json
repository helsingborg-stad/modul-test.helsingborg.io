            "email": "johan.silvergrund@hiq.se"
        }
    ],
    "prefer-stable": true,
    "minimum-stability" : "dev",
    "repositories": [
        {
            "type":"composer",
            "url":"https://packagist.org"
        },
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require": {
        "composer/installers": "~1.0",
        "johnpbloch/wordpress": "^5.0",
        "helsingborg-stad/modularity": "dev-ci/composer-builder",
        "helsingborg-stad/municipio": "dev-ci/builder",
        "helsingborg-stad/api-event-manager-integration": "dev-ci/builder",
        "helsingborg-stad/force-ssl": ">=1.0.0",
        "helsingborg-stad/search-notices": ">=1.0.0",
        "helsingborg-stad/lix-calculator": ">=1.0.1",
        "helsingborg-stad/active-directory-api-wp-integration": ">=2.0.0",
        "helsingborg-stad/easy-to-read-alternative": "dev-ci/builder",
        "helsingborg-stad/modularity-form-builder": "dev-ci/builder",
        "helsingborg-stad/wp-page-for-post-type": ">=1.0.0",
        "helsingborg-stad/api-alarm-integration": "dev-ci/builder",
        "helsingborg-stad/modularity-guides": "dev-3.0/develop",
        "helsingborg-stad/modularity-sections": "dev-3.0/develop",
        "helsingborg-stad/modularity-timeline": ">=1.1.4",
        "helsingborg-stad/modularity-json-render": "dev-ci/builder",
        "helsingborg-stad/modularity-products": "dev-ci/builder",
        "wpackagist-plugin/varnish-http-purge": "^4.1.1",
        "wpackagist-plugin/autodescription" : ">=2.9.0",
        "wpackagist-plugin/redis-cache": "2.0.15",
        "wpackagist-plugin/wp-nested-pages": "3.1.4",
        "helsingborg-stad/customer-feedback": "dev-ci/builder",
        "helsingborg-stad/media-usage": "^1.0",
        "wpackagist-plugin/redirection": "^4.3.1",
        "helsingborg-stad/job-listings": "dev-ci/builder",
        "helsingborg-stad/redirection-extended": "^1.0",
        "helsingborg-stad/modularity-contact-banner": "dev-ci/builder",
        "bueltge/must-use-loader": "^1.3",
        "helsingborg-stad/component-library": "dev-master",
        "wpackagist-plugin/fakerpress":"0.5.2",
        "helsingborg-stad/modularity-testimonials": "dev-3.0/develop",
        "helsingborg-stad/modularity-local-events": "^1.0",
        "helsingborg-stad/algolia-index": "^1.7",
        "helsingborg-stad/algolia-index-modularity-addon": "^1.0",
        "helsingborg-stad/multisite-role-propagation": "^1.0",
        "helsingborg-stad/modularity-recommend": "dev-master",
        "wp-graphql/wp-graphql-acf": "^0.5.3",
        "wp-graphql/wp-graphql": "^1.6",
        "helsingborg-stad/wp-graphql-municipio": "dev-main",
        "wpackagist-plugin/wp-add-mime-types": "^3.0",
        "helsingborg-stad/modularity-mhbooking": "dev-ci/builder",
        "helsingborg-stad/api-kiosk-model-viewer": "^1.0",
        "helsingborg-stad/modularity-mypages": "dev-ci/builder",
        "helsingborg-stad/api-ar-dialogue-room": "dev-master",
        "helsingborg-stad/attachment-revisions": "^1.2",
        "helsingborg-stad/content-scheduler": "^1.2",
        "helsingborg-stad/builder": "^1.0.2"
    },

    "extra": {
        "path": "/",
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "wp-content/plugins/{$name}": ["type:wordpress-plugin"],
            "wp-content/themes/{$name}": ["type:wordpress-theme"]
        },
        "builder": {
            "cleanup": "false",
            "removables": [
                "README.md",
                "composer.json",
                "composer.lock",
                "deploy.sh",
                ".gitignore",
                ".github",
                "post-install.php"
            ]
        }
    },
    "scripts": {
        "deploy": [
            "./deploy.sh"
        ],
        "build-production": [
            "composer config extra.builder.cleanup true",
            "composer update --prefer-dist --no-progress --no-suggest",
            "composer config extra.builder.cleanup false"
        ],
        "post-install-cmd": [
            "mkdir -p wp-content/uploads/cache/blade-cache",
            "@php post-install.php"
        ],
        "post-update-cmd": [
            "@php post-install.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true,
            "helsingborg-stad/builder": true
        }
    }
}
