{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup:composer-install",
            "type": "shell",
            "options": {"cwd": "${workspaceFolder}"},
            "command": ["composer", "install"],
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "setup:configure-salts",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/config-salts.sh",
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "setup:config-files",
            "type": "shell",
            "command": [
                "cp", "${workspaceFolder}/.vscode/tasks/templates/database.php", "${workspaceFolder}/config/database.php",
                "&&",
                "cp", "${workspaceFolder}/.vscode/tasks/templates/multisite.php", "${workspaceFolder}/config/multisite.php",
                "&&",
                "cp", "${workspaceFolder}/.vscode/tasks/templates/sunrise.php", "${workspaceFolder}/wp-content/sunrise.php"
            ],
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "setup:install-database",
            "options": {"cwd": "${workspaceFolder}"},
            "type": "shell",
            "command": "wp core install --title='Modul Test Local' --url=localhost --admin_user=admin --admin_email=admin@local.host  --allow-root",
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "setup:fetch-remote-database",
            "options": {"cwd": "${workspaceFolder}"},
            "type": "shell",
            "command": "wp @stage db export --exclude_tables=modul_test_users,modul_test_usermeta --allow-root - | tee database.sql",
            "hide": true,
            "problemMatcher": []
            
        },
        {
            "label": "setup:import-remote-database",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/import-database.sh",
            "dependsOn": ["setup:install-database", "setup:fetch-remote-database"],
            "dependsOrder": "sequence",
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "setup:config-npmrc",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/config-npmrc.sh",
            "hide": false,
            "problemMatcher": []
        },
        {
            "label": "setup:add-acf-plugin",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/setup-env-variables.sh && ${workspaceFolder}/.vscode/tasks/add-acf-plugin.sh",
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": ["php", "build.php"],
            "problemMatcher": []
        },
        {
            "label": "setup:deactivate-plugins",
            "options": {"cwd": "${workspaceFolder}"},
            "type": "shell",
            "command": "wp plugin deactivate force-ssl --allow-root --network && wp plugin deactivate force-ssl --allow-root",
            "hide": false,
            "problemMatcher": []
        },
        {
            "label": "start server",
            "type": "shell",
            "command": ["apache2ctl", "start"],
            "problemMatcher": [],
        },
        {
            "label": "setup:check-prerequesites",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/check-setup-prerequisites.sh",
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "setup",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "setup:check-prerequesites",
                "setup:composer-install",
                "setup:config-files",
                "setup:configure-salts",
                "setup:config-npmrc",
                "setup:add-acf-plugin",
                "build",
                "setup:import-remote-database",
                "setup:deactivate-plugins"
            ],
            "command": [],
            "problemMatcher": []
        },
    ],
}