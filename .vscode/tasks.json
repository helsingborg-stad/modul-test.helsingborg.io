{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install",
            "type": "shell",
            "options": {"cwd": "${workspaceFolder}"},
            "command": ["composer", "install"],
            "problemMatcher": []
        },
        {
            "label": "configure salts",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/config-salts.sh",
            "problemMatcher": []
        },
        {
            "label": "setup:config-files",
            "type": "shell",
            "command": [
                "cp", "${workspaceFolder}/.vscode/tasks/templates/database.php", "${workspaceFolder}/config/database.php",
                "&&",
                "cp", "${workspaceFolder}/.vscode/tasks/templates/multisite.php", "${workspaceFolder}/config/multisite.php",
                "&&",
                "cp", "${workspaceFolder}/.vscode/tasks/templates/sunrise.php", "${workspaceFolder}/wp-content/sunrise.php"
            ],
            "problemMatcher": []
        },
        {
            "label": "import database",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/import-database.sh",
            "problemMatcher": []
        },
        {
            "label": "replace remote domain in database",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/replace-remote-domain-in-database.sh",
            "problemMatcher": []
        },
        {
            "label": "config .npmrc file",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/config-npmrc.sh",
            "problemMatcher": []
        },
        {
            "label": "add acf plugin",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/setup-env-variables.sh && ${workspaceFolder}/.vscode/tasks/add-acf-plugin.sh",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": ["php", "build.php"],
            "problemMatcher": []
        },
        {
            "label": "add admin user",
            "options": {"cwd": "${workspaceFolder}"},
            "type": "shell",
            "command": "wp user create developer developer@localhost.dev --role=administrator --user_pass=developer",
            "problemMatcher": []
        },
        {
            "label": "deactivate plugins",
            "options": {"cwd": "${workspaceFolder}"},
            "type": "shell",
            "command": "wp plugin deactivate force-ssl --allow-root --network && wp plugin deactivate force-ssl --allow-root",
            "problemMatcher": []
        },
        {
            "label": "start server",
            "type": "shell",
            "command": ["apache2ctl", "start"],
            "problemMatcher": [],
        },
        {
            "label": "setup",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "install",
                "setup:config-files",
                "config .npmrc file",
                "add acf plugin",
                "build",
                "import database",
                "replace remote domain in database",
                "deactivate plugins"
            ],
            "command": [],
            "problemMatcher": []
        },
    ],
}