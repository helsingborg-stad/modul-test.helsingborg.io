{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install",
            "type": "shell",
            "options": {"cwd": "${workspaceFolder}"},
            "command": ["composer", "install", "--prefer-source"],
            "problemMatcher": []
        },
        {
            "label": "configure salts",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/config-salts.sh",
            "problemMatcher": []
        },
        {
            "label": "configure database",
            "type": "shell",
            "command": "cp ${workspaceFolder}/.vscode/tasks/templates/database.php ${workspaceFolder}/config/database.php",
            "problemMatcher": []
        },
        {
            "label": "configure multisite",
            "type": "shell",
            "command": "cp ${workspaceFolder}/.vscode/tasks/templates/multisite.php ${workspaceFolder}/config/multisite.php",
            "problemMatcher": []
        },
        {
            "label": "import database",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/import-database.sh",
            "problemMatcher": []
        },
        {
            "label": "replace remote domain in database",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/replace-remote-domain-in-database.sh",
            "problemMatcher": []
        },
        {
            "label": "config .npmrc file",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/config-npmrc.sh ${input:github-token}",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": ["php", "build.php"],
            "problemMatcher": []
        },
        {
            "label": "add acf plugin",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks/add-acf-plugin.sh ${input:acf-token}",
            "problemMatcher": []
        },
        {
            "label": "add admin user",
            "options": {"cwd": "${workspaceFolder}"},
            "type": "shell",
            "command": "wp user create developer developer@localhost.dev --role=administrator --user_pass=developer",
            "problemMatcher": []
        },
        {
            "label": "deactivate plugins",
            "options": {"cwd": "${workspaceFolder}"},
            "type": "shell",
            "command": "wp plugin deactivate force-ssl --allow-root --network && wp plugin deactivate force-ssl --allow-root",
            "problemMatcher": []
        },
        {
            "label": "start server",
            "type": "shell",
            "command": ["apache2ctl", "start"],
            "problemMatcher": [],
        },
        {
            "label": "setup",
            "type": "shell",
            "dependsOn": [
                "install",
                "configure salts",
                "configure database",
                "configure multisite",
                "config .npmrc file",
                "add acf plugin",
                "build",
                "import database",
                "replace remote domain in database",
                "deactivate plugins"
            ],
            "command": [],
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "github-token",
            "description": "Provide a GitHub token that enables package:read. This is then added to a .npmrc file in the project root.",
            "type": "promptString"
        },
        {
            "id": "acf-token",
            "description": "Provide a token for the ACF plugin download.",
            "type": "promptString"
        },
    ]
}