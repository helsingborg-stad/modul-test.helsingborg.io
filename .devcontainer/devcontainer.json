// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/php-mariadb
{
	"name": "PHP, Apache & MariaDB",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	
	// For use with PHP or Apache (e.g.php -S localhost:8080 or apache2ctl start)
	"forwardPorts": [
		3306,
		80
	],

	"portsAttributes": {
		"80": {
			"label": "WordPress"
		},
		"3306": {
			"label": "Database"
		}
	},

	"remoteEnv": {
		"XDEBUG_MODE": "off"
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "16.19.0"
		},
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
			"packages": "mariadb-client,bash-completion,subversion"
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": {
		"symlink-workspace-to-www": "sudo chmod a+x \"$(pwd)\" && sudo rm -rf /var/www/html && sudo ln -s \"$(pwd)\" /var/www/html",
		"start-apache": "service apache2 start"
	},

	"waitFor": "postCreateCommand",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"eamodio.gitlens",
				"amirmarmul.laravel-blade-vscode",
				"ritwickdey.liveserver",
				"xdebug.php-debug"
			],
			"settings": {
				"remote.autoForwardPorts": true,
				"explorer.excludeGitIgnore": false,
				"search.useIgnoreFiles": false,
				"terminal.integrated.defaultProfile.linux": "zsh",
			}
		}
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode"
}